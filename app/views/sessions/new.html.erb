<% provide(:title, t(:login)) %>
<h1><%=t :login %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to t(:forgotpassword), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%=t :remember_me%></span>
      <% end %>

      <%= f.submit t(:login), class: "btn btn-primary" %>
      <small><%=t :googleredirect %></small>
    <% end %>
    
    <br>
    <a href="<%= google_path %>" class="google btn btn-danger btn-block"> <span></span><%=t :loginwithgoogle %></a>

    <p><%=t :newuser %> <%= link_to t(:signupnow), signup_path %></p>
  </div>
</div>