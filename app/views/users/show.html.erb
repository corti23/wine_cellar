<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.googleaccount? %>
           <img src="<%= @user.googleimage %>", height="80", width="80">
        <% else %>
           <%= gravatar_for @user %>
        <% end %>
        
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>