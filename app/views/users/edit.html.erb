<% provide(:title, t(:edituser)) %>
<% provide(:button_text, t(:savechanges)) %>
<h1><%=t :udpdateyourprofile%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      
       <% if @user.googleaccount? %>
           <img src="<%= @user.googleimage %>", height="80", width="80">
        <% else %>
           <%= gravatar_for @user %>
           <a href="http://gravatar.com/emails" target="_blank"><%=t :change %></a>
        <% end %>
        
    </div>
  </div>
</div>